<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.embed.swing.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="10.0" styleClass="settingsPaneWithBackground" stylesheets="@../resources/application.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mary.train.your.ear.controller.dialog.AddChordPopupController">

	<children>
		<Label text="Poprzez podwójne kliknięcie dodaj interwały do nowego akordu" wrapText="true">
			<VBox.margin>
				<Insets left="10.0" />
			</VBox.margin>
		</Label>
		<TextField fx:id="chordName" maxWidth="209.0" minWidth="150.0" prefWidth="150.0" promptText="Nazwa">
			<VBox.margin>
				<Insets left="10.0" right="10.0" top="4.0" />
			</VBox.margin>
		</TextField>
		<TextField fx:id="chordHints" maxWidth="350.0" minWidth="150.0" prefWidth="150.0" promptText="Podpowiedzi">
			<VBox.margin>
				<Insets left="10.0" right="10.0" />
			</VBox.margin>
		</TextField>
		<HBox spacing="20.0" styleClass="settingsPaneWithBackground" stylesheets="@../resources/application.css">
			<children>
				<VBox>
					<children>
						<HBox spacing="20.0">
							<children>
								<ListView fx:id="availableIntervalsList" prefHeight="200.0" prefWidth="100.0" />
								<ListView fx:id="selectedIntervalsList" prefHeight="200.0" prefWidth="100.0" />
							</children>
						</HBox>
						<SwingNode fx:id="scoreNode" VBox.vgrow="ALWAYS">
							<VBox.margin>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</VBox.margin>
						</SwingNode>
					</children>
				</VBox>
				<VBox alignment="TOP_RIGHT" spacing="20.0">
					<children>
						<Button fx:id="tryNewChord" mnemonicParsing="false" onAction="#playNewChord" styleClass="addChordButton" stylesheets="@../resources/buttons.css" text="Zagraj" />
						<Button fx:id="createNewChord" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#createNewChord" styleClass="addChordButton" stylesheets="@../resources/buttons.css" text="Utwórz" textAlignment="CENTER" />
						<Button mnemonicParsing="false" onAction="#closeWindow" styleClass="addChordButton" stylesheets="@../resources/buttons.css" text="Zamknij">
							<VBox.margin>
								<Insets />
							</VBox.margin>
						</Button>
					</children>
					<HBox.margin>
						<Insets left="20.0" />
					</HBox.margin>
				</VBox>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</HBox>
		<Label fx:id="statusLabel" alignment="CENTER">
			<VBox.margin>
				<Insets left="5.0" right="5.0" />
			</VBox.margin>
		</Label>
	</children>
	<padding>
		<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
	</padding>
</VBox>
