<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox fx:id="intervalsTaskPane" prefHeight="400.0" styleClass="settingsPaneWithBackground" stylesheets="@resources/application.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mary.train.your.ear.controller.tasks.IntervalsTaskPaneController">
	<children>
		<HBox spacing="20.0" stylesheets="@resources/application.css">
			<children>
				<Button maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" onAction="#showTaskInfo" prefHeight="40.0" prefWidth="40.0" styleClass="taskInfoButton" stylesheets="@resources/buttons.css" />
				<Label fx:id="taskInfoLabel" text="Info about interval task" wrapText="true" />
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
			<styleClass>
				<String fx:value="settingsPaneWithBackground" />
				<String fx:value="taskInfoPopupPanel" />
			</styleClass>
		</HBox>
		<VBox alignment="CENTER" spacing="30.0">
			<children>
				<TilePane fx:id="itemListPane" alignment="CENTER" hgap="20.0" prefColumns="4" prefHeight="200.0" prefWidth="200.0" styleClass="settingsPaneWithBackground" stylesheets="@resources/application.css" vgap="20.0" />
				<HBox alignment="CENTER" spacing="50.0">
					<children>
						<ListView fx:id="itemAnswerList" maxWidth="300.0" minWidth="200.0" prefHeight="150.0" prefWidth="300.0" styleClass="answerListView" stylesheets="@resources/listview.css">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></ListView>
						<ListView fx:id="correctAnswerList" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" styleClass="answerListView" stylesheets="@resources/listview.css">
							<padding>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</padding>
							<opaqueInsets>
								<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
							</opaqueInsets>
						</ListView>
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</VBox>
