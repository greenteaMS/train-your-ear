<VBox fx:id="chordTaskPane" alignment="TOP_CENTER" prefHeight="400.0" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mary.train.your.ear.controller.tasks.ChordTaskPaneController">
	<children>
		<TilePane fx:id="itemListPane" alignment="CENTER" hgap="20.0" prefColumns="4" prefHeight="200.0" prefWidth="200.0" vgap="20.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></TilePane>
      <HBox alignment="CENTER" spacing="50.0">
         <children>
      		<ListView fx:id="itemAnswerList" prefHeight="210.0" prefWidth="200.0" styleClass="answerListView" stylesheets="@resources/listview.css">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <opaqueInsets>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </opaqueInsets>
            </ListView>
            <ListView fx:id="correctAnswerList" prefHeight="200.0" prefWidth="200.0" styleClass="answerListView" stylesheets="@resources/listview.css">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <opaqueInsets>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </opaqueInsets>
            </ListView>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="30.0" right="30.0" />
         </VBox.margin>
      </HBox>
	</children>
</VBox>
